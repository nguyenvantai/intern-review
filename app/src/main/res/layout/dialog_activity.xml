<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlComfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog.height.126dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF">
        <RelativeLayout android:id="@+id/rlConfirm_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_header.height.97dp">

            <TextView android:id="@+id/tvConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                ></TextView>
            <View android:id="@+id/view"
                android:layout_height="@dimen/view.height.1dp"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/textview.color.dark"></View>

        </RelativeLayout>

        <RelativeLayout android:id="@+id/rlConfirm_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlConfirm_first">

            <RelativeLayout android:id="@+id/rlOk"
                android:layout_width="@dimen/relativelayout.width.180dp"
                android:layout_height="match_parent">
            <TextView android:id="@+id/tvOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview.size.14sp"
                android:textColor="@color/activity_contacts.color.blue"
                android:text="@string/textview.text.OK"
                android:layout_centerInParent="true"></TextView>
                </RelativeLayout>
           <View android:id="@+id/viewCenter"
               android:layout_width="@dimen/view.height.1dp"
               android:layout_height="@dimen/view.width.29dp"
               android:background="@color/textview.color.dark"
               android:layout_centerHorizontal="true"></View>

            <RelativeLayout android:id="@+id/rlCancel"
                android:layout_width="@dimen/relativelayout.width.180dp"
                android:layout_toRightOf="@+id/viewCenter"
                android:layout_height="match_parent">
                <TextView android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textview.size.14sp"
                    android:text="@string/textview.text.Cancel"
                    android:textColor="@color/activity_contacts.color.blue"
                    android:layout_centerInParent="true"></TextView>
            </RelativeLayout>

        </RelativeLayout>





        </RelativeLayout>

</RelativeLayout>
