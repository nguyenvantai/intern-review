<RelativeLayout
    android:id="@+id/rlContacts"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_contacts.height_header.52dp"
        android:background="@color/activity_contacts.color.blue">

        <ImageView android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="@dimen/activity_contacts.marginLeft_ic_back.18dp"
            android:layout_centerVertical="true"></ImageView>

        <TextView android:id="@+id/tvContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textview.color.white"
            android:text="@string/textview.text.contacts"
            android:textSize="@dimen/textview.size_contacts.24sp"
            android:layout_centerInParent="true"></TextView>
    </RelativeLayout>
    <ListView android:id="@+id/lvPerson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeaderBar"></ListView>


</RelativeLayout>